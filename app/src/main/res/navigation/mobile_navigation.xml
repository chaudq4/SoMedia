<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.chauduong.somedia.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_message"
        android:name="com.chauduong.somedia.ui.message.MessageFragment"
        android:label="@string/title_message"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_examination"
        android:name="com.chauduong.somedia.ui.ui.examination.ExaminationFragment"
        android:label="@string/title_examination"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.chauduong.somedia.ui.setting.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting" />

</navigation>